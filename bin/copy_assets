#!/usr/bin/env bash

asset_dir="$1"

goreleaser_dir="dist/goreleaser/"

assets=(
    "NOTICES.txt"
    "CHANGELOG.md"
    "${goreleaser_dir}SHA256SUMS.txt"
    "LICENSE"
    "${goreleaser_dir}*.tar.gz"
    "${goreleaser_dir}*.deb"
    "${goreleaser_dir}*.rpm"
    )

for asset in "${assets[@]}"; do
    echo "Copying ${asset} to ${asset_dir}"
    cp "${asset}" "${asset_dir}"
done