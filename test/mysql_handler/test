#!/bin/bash -ex

local_test=false
while getopts :l opt; do
    case $opt in
        l) local_test=true ;;
       \?) echo "Unknown option -$OPTARG"; exit 1;;
    esac
done

docker_args=""
if $local_test; then
  docker_args="-v $(cd ../..; pwd):/go/src/github.com/conjurinc/secretless"
fi

docker-compose run \
  --rm \
  --no-deps \
  $docker_args \
  test
